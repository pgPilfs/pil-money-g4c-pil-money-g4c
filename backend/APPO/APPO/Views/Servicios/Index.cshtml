@model IEnumerable<APPO.Models.Servicios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Agregar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre_servicio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_servicio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Modificar", new { id=item.id_servicio }) |
            @Html.ActionLink("Details", "DetallesServicios", new { id=item.id_servicio }) |
            @Html.ActionLink("Delete", "Eliminar", new { id=item.id_servicio })
        </td>
    </tr>
}

</table>
